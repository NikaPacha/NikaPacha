using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class SphereMover : MonoBehaviour
{
   [SerializeField] private Vector3 _movementDirection;

    void Update()
    {
        transform.position += _movementDirection;
    }
}
public class CubeSpin : MonoBehaviour
{
   private void Update()
    {
        transform.Rotate(0, 5, 0);
    }
}

public class CapsuleSise : MonoBehaviour
{
    [SerializeField] private float _growSpeed = 0.5f;

    void Update()
    {
        transform.localScale += Vector3.one * _growSpeed * Time.deltaTime;
    }
}

public class CubeComplex : MonoBehaviour
{
    [SerializeField] private float _moveSpeed = 20f;
    [SerializeField] private float _rotationSpeed = 100f;
    [SerializeField] private float _growSpeed = 0.2f;

    private void Update()
    {
        transform.Translate(Vector3.forward * _moveSpeed * Time.deltaTime);

        transform.Rotate(Vector3.up * _rotationSpeed * Time.deltaTime);

        transform.localScale += Vector3.one * _growSpeed * Time.deltaTime;
    }
}
