using System;
using System.Collections.Generic;
using System.Data.SqlTypes;
using System.Linq;
using System.Runtime.InteropServices;
using System.Security.Cryptography;
using System.Text;
using System.Threading;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main()
        {
            char symbolLeftParenthesis = '(';
            char symbolRightParenthesis = ')';
            int maxInvestmentDepth = 0;
            int currentInvestmentDepth = 0;
            int lineDepth = 0;
            int number = 1;

            Console.WriteLine("Введите строку из символо '(' и ')'");
            string text = Console.ReadLine();

            for (int i = 0; i < text.Length; i++)
            {
                if (text[i] == symbolLeftParenthesis)
                {
                    maxInvestmentDepth++;
                }
                else if (text[i] == symbolRightParenthesis)
                {
                    currentInvestmentDepth++;
                    maxInvestmentDepth--;
                }
                if (maxInvestmentDepth < 0)
                {
                    break;
                }
                else if (maxInvestmentDepth == 0)
                {
                    lineDepth = currentInvestmentDepth;
                }
            }
            if (maxInvestmentDepth == 0)
            {
                Console.WriteLine("Строка корректная " + text + "\n" + "Максимум глубина равняется: " + (lineDepth - number));
            }
            else
            {
                Console.WriteLine("Ошибка! Не верная строка " + text);
            }
        }
    }
}
