using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main()

        {
            int time = 10;
            Console.WriteLine("Введите кол-во человек в очереди:");
            int persons = Convert.ToInt32(Console.ReadLine());

            int hours = (time * persons) / 60;
            int minutes = (time * persons) % 60;

            if (hours == 0)
            {
                Console.WriteLine("Вы должны отстоять в очереди " + minutes + "мин.");
            }
            else
            {
                Console.WriteLine("Вы должны отстоять в очереди " + hours + "ч. " + minutes + "мин.");
            }
        }
    }
}
