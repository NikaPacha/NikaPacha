using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace уроки
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            bool isExitProgram = true;
            string exit = "exit";

            Console.WriteLine("Напишите что-нибудь: ");
            Console.WriteLine("*Для выхода из программы, напишите 'exit '.");

            while (isExitProgram)
            {
                userInput = Console.ReadLine();
                if (userInput == exit)
                {
                    isExitProgram = false;
                    Console.WriteLine("Досвидания!");
                }
                else
                {
                    Console.WriteLine("Продолжай");
                }
            }
        }
    }
}
