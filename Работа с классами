using System.Collections.Generic;
using System;
using System.Runtime.InteropServices;

public class Program
{
    static void Main(string[] args)
    {
        Player player = new Player("Bob", 15, 3, 7.0f);
        player.ShowInfo();
    }
}

class Player
{
    public string NickName;
    public int Health;
    public int Power;
    public float Speed;

    public Player(string nickName, int health, int power, float speed)
    {
        NickName = nickName;
        Health = health;
        Power = power;
        Speed = speed;
    }

    public Player()
    {

    }

    public void ShowInfo()
    {
        Console.WriteLine($"Имя игрока: {NickName}\n" +
            $"Здоровье игрока: {Health}\nСила игрока: {Power}\nСкорость игрока {Speed}");
    }
}
