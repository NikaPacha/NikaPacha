using System;
using System.Collections.Generic;
using System.Linq;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main()
        {
            int number;
            int minNumber = 100;
            int maxNumber = 1000;
            int minRandNumber = 1;
            int maxRandNumber = 28;
            int sum = 0;

            Random random = new Random();
            number = random.Next(minRandNumber, maxRandNumber);

            Console.WriteLine($"Наше число N = {number}.");
            Console.Write($"Трехзначные натуральные числа, кратные {number}: ");

            for (int i = 0; i < maxNumber; i += number)
            {
                if (i < minNumber)
                {
                }
                else
                {
                    Console.Write(i + ",");
                    sum++;
                }
            }
            Console.WriteLine("\nКоличество трехзначных натуральных чисел " + sum);
        }
    }
}
